<%- include('includes/header', {title}) %>

<%- include('includes/dashboard-header', {user}) %>
<div class="main-content">
    <%- include('includes/side-nav') %>
    <main class="main-info">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center">Add Student Info</h2>
                <form method="POST" action="/add-student" class="student-form" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" id="firstName" name="firstName"
                            placeholder="Enter First Name">
                    </div>
                    <div class="form-group">
                        <label for="otherNames">Other Names</label>
                        <input type="text" class="form-control" id="otherNames" name="otherNames"
                            placeholder="Enter Other Names">
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" id="lastName" name="lastName"
                            placeholder="Enter Last Name">
                    </div>
                    <div class="form-group">
                        <label for="genderSelection">Select Gender</label>
                        <select class="form-control" id="genderSelection" name="gender">
                            <option name="male">Male</option>
                            <option name="female">Female</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="dateOfBirth">Date Of Birth</label>
                        <input class="form-control calendar" id="dateOfBirth" name="dateOfBirth"
                            placeholder="Select Date..." data-date-format="d-M-Y" />
                    </div>
                    <div class="form-group">
                        <label for="hometown">Home Town</label>
                        <input type="text" class="form-control" id="hometown" name="hometown"
                            placeholder="Hometown">
                    </div>
                    <div class="form-group">
                        <label for="regionSelection">Select Region</label>
                        <select class="form-control" id="regionSelection" name="region">
                            <option name="ahafo">Ahafo</option>
                            <option name="ashanti">Ashanti</option>
                            <option name="bono">Bono</option>
                            <option name="bono_east">Bono East</option>
                            <option name="central">Central</option>
                            <option name="eastern">Eastern</option>
                            <option name="greater_accra">Greater Accra</option>
                            <option name="north_east">North East</option>
                            <option name="nothern">Northern</option>
                            <option name="oti">Oti</option>
                            <option name="savannah">Savannah</option>
                            <option name="upper_east">Upper East</option>
                            <option name="upper_west">Upper West</option>
                            <option name="volta">Volta</option>
                            <option name="western">Western</option>
                            <option name="western_north">Western North</option>
                        </select>
                    </div>
                    <!-- <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Photo</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="studentPhoto" name="studentPhoto" multiple="multiple">
                            <label class="custom-file-label" for="studentPhoto">Choose file</label>
                        </div>
                    </div> -->
                    <input type="file" name="studentPhoto" />
                    <button type="submit" class="btn btn-lg btn-outline-info">Submit</button>
                </form>
            </div>
        </div>

    </main>

</div>
<%- include('includes/footer') %>